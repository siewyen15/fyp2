<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title with Add Button -->
    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/button_Workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:onClick="onAddButtonClick"
        android:text="Workout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Push-ups Chart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_pushups"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <Spinner
                        android:id="@+id/spinner_pushups"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/button_set_goal_pushups"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Weekly Goal"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Sit-ups Chart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_situps"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <Spinner
                        android:id="@+id/spinner_situps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/button_set_goal_situps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Weekly Goal"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Squats Chart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_squats"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <Spinner
                        android:id="@+id/spinner_squats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/button_set_goal_squats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Weekly Goal"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Plank Chart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_plank"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <Spinner
                        android:id="@+id/spinner_plank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/button_set_goal_plank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Weekly Goal"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
