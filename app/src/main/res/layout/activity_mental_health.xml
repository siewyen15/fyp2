<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Mood TextView -->
    <TextView
        android:id="@+id/textView_title_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- First row of buttons -->
    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textView_title_mood"
        android:layout_marginTop="60dp">

        <!-- ImageButton 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button_mood"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/mood"
                android:scaleType="fitCenter"
                android:contentDescription="Mood"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- ImageButton 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button_mental_wellness"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/yoga"
                android:scaleType="fitCenter"
                android:contentDescription="Mental Wellness"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mental Wellness"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Second row of buttons -->
    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/firstRow"
        android:layout_marginTop="16dp">

        <!-- ImageButton 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button_journal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/journal"
                android:scaleType="fitCenter"
                android:contentDescription="Journal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- ImageButton 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button_emergency_contact"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/emergency_contact"
                android:scaleType="fitCenter"
                android:contentDescription="Emergency Contact"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Contact"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Third row of buttons -->
    <LinearLayout
        android:id="@+id/thirdRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondRow"
        android:layout_marginTop="16dp">

        <!-- ImageButton 5 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button_water"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/water"
                android:scaleType="fitCenter"
                android:contentDescription="Water"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
