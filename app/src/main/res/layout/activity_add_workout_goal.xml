<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/selectExerciseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Exercise Type"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/exerciseTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectExerciseLabel"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:entries="@array/exercise_types" />

    <EditText
        android:id="@+id/goalEditText"
        android:layout_below="@id/exerciseTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Goal"
        android:inputType="number" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_below="@id/goalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none" />

    <Button
        android:id="@+id/selectDateButton"
        android:layout_below="@id/dateEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select Date"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/saveButton"
        android:layout_below="@id/selectDateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
