<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_with_border"> <!-- Add background border here -->

    <!-- Exercise Name Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Name:"
        android:textColor="@color/black"
        android:padding="8dp" />

    <!-- Exercise Name TextView -->
    <TextView
        android:id="@+id/exerciseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Exercise Name"
        android:textColor="@color/black"
        android:padding="8dp" /> <!-- Add padding -->

    <!-- Goal Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal:"
        android:textColor="@color/black"
        android:padding="8dp" />

    <!-- Goal TextView -->
    <TextView
        android:id="@+id/goalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Goal"
        android:textColor="@color/black"
        android:padding="8dp" /> <!-- Add padding -->

    <!-- Date Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textColor="@color/black"
        android:padding="8dp" />

    <!-- Date TextView -->
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Date"
        android:textColor="@color/black"
        android:padding="8dp" /> <!-- Add padding -->

    <!-- Completed Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed:"
        android:textColor="@color/black"
        android:padding="8dp" />

    <!-- Completed TextView -->
    <TextView
        android:id="@+id/completedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Completed"
        android:textColor="@color/black"
        android:padding="8dp" /> <!-- Add padding -->

</LinearLayout>
